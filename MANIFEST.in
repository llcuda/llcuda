# MANIFEST.in for llcuda v2.0.3 (Lightweight package - binaries downloaded on first import)

# Documentation
include README.md
include LICENSE
include CHANGELOG.md

# Python package files
include pyproject.toml
include setup.py

# Internal modules
recursive-include llcuda/_internal *.py

# EXCLUDE binaries, libraries, models, and archives (downloaded on first import)
recursive-exclude llcuda/binaries *
recursive-exclude llcuda/lib *
recursive-exclude llcuda/models *
global-exclude *.gguf
global-exclude *.tar.gz
global-exclude *.so
global-exclude *.so.*

# Exclude unwanted files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude .DS_Store
global-exclude .git*
global-exclude *.swp
global-exclude *.bak
recursive-exclude llcuda/__pycache__ *
